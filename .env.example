# @dreamer/config 示例配置文件
# 这是一个示例 .env 文件，展示了如何使用 @dreamer/config 库

# 应用配置
APP_NAME=my-app
APP_VERSION=1.0.0
APP_PORT=3000

# 数据库配置
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=myapp
DATABASE_USER=admin
DATABASE_PASSWORD=secret

# API 配置
API_URL=https://api.example.com
API_KEY=your-api-key-here

# 环境变量引用示例
# 可以引用其他环境变量
BASE_URL=${API_URL}
FULL_API_URL=${BASE_URL}/v1

# 带引号的值（引号会被自动移除）
APP_DESCRIPTION="My Application Description"
APP_TAGLINE='Build with @dreamer/config'

# 注释会被忽略
# 空行也会被忽略
